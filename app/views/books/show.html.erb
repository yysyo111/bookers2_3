<p id="notice"></p>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td></td>
            <td><%= link_to @book.title, book_path(@book.id) %></td>
            <td><%= @book.body %></td>
            <td>
              <% if @user == current_user %>
                <p><%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-sm btn-success edit_book_3205" %></p>
              <% end %>
            </td>
            <td>
              <% if @user == current_user %>
                <p><%= link_to "Destroy", book_path(@book), method: :delete,  "data-confirm" => "本当に削除しますか？", class: "btn btn-sm btn-danger destroy_book_5118" %></p>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>


